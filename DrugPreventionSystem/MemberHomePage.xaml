<Window x:Class="DrugPreventionSystem.MemberHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trang của Member" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Lời chào -->
        <TextBlock x:Name="lblWelcome"
                   Text="Chào mừng, Member!"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="DarkGreen"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Menu các chức năng -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300">
            <Button Content="📚 Xem khóa học"
            Click="btnCourses_Click"
            FontSize="16"
            Height="40"
            Margin="0,0,0,10"/>

            <Button Content="🕓 Lịch sử tham gia"
            Click="btnHistory_Click"
            FontSize="16"
            Height="40"
            Margin="0,0,0,10"/>

            <Button Content="🚪 Đăng xuất"
            Click="btnLogout_Click"
            FontSize="16"
            Height="40"
            Background="Tomato"
            Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
