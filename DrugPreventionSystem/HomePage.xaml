<Page x:Class="DrugPreventionSystem.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="HomePage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Hệ thống hỗ trợ phòng chống sử dụng chất gây nghiện"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="DarkGreen"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock x:Name="txtGreeting"
                       FontSize="18"
                       TextAlignment="Center"
                       Foreground="Black"/>

            <TextBlock Text="Chào mừng bạn đến với hệ thống. Vui lòng chọn chức năng từ menu bên trái."
                       FontSize="16"
                       Margin="0,20,0,0"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
